@{ViewData["Title"] = "Delete Movie Entry";
}

@model MovieEntry

<h2>Confirm Deletion</h2>
<h3>Are you sure that you want to delete @Model.Title from the record?</h3>

<form method="post" asp-controller="home" asp-action="Delete">
    <button typ="submit">Delete</button>
    <a asp-controller="home" asp-action="MovieList" class="btn btn-primary">Cancel</a>

    <!--needed hidden field to send data associated with a particular ID-->
    <input type="hidden" asp-for="MovieId"/>
</form>

